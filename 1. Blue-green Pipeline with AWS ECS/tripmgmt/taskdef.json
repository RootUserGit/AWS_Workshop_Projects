{
  "executionRoleArn": "arn:aws:iam::997450571655:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::997450571655:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "logConfiguration": {
        "logDriver": "awslogs",
        "secretOptions": [],
        "options": {
          "awslogs-group": "tripmgmt-demo-ecstask-loggrp",
          "awslogs-region": "us-east-2",
          "awslogs-stream-prefix": "awslogs-tripmgmtdemo-ecstask"
        }
      },
      "entryPoint": [],
      "portMappings": [
        {
          "hostPort": 8080,
          "protocol": "tcp",
          "containerPort": 8080
        }
      ],
      "environment": [
        {
          "name": "JAVA_OPTS",
          "value": "-Djava.net.preferIPv4Stack=true -Djava.net.preferIPv4Addresses"
        },
        {
          "name": "JHIPSTER_SLEEP",
          "value": "0"
        },
        {
          "name": "SPRING_DATASOURCE_URL",
          "value": "jdbc:postgresql://tripmgmtdb-cluster.cluster-czohtaa5mjpd.us-east-2.rds.amazonaws.com:5432/tripmgmt"
        },
        {
          "name": "SPRING_DATASOURCE_USERNAME",
          "value": "postgres"
        },
		    {
          "name": "SPRING_DATASOURCE_PASSWORD",
          "value": "SuperSecretPGSqlPwd##2006"
        },
		    {
          "name": "SPRING_PROFILES_ACTIVE",
          "value": "prod,swagger"
        }
      ],
      "image": "997450571655.dkr.ecr.us-east-2.amazonaws.com/devops/tripmgmtdemo:latest",
      "essential": true,
      "name": "cntr-img-tripmgmt"
    }
  ],
  "requiresCompatibilities": [
    "EC2"
  ],
  "networkMode": "awsvpc",
  "family": "task-tripmgmt-demo",
  "cpu": "1024",
  "memory": "2048"
}
